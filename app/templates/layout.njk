<!doctype html>
<html class="no-js" data-bs-theme="dark" lang="">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Erg Explorer (Alpha) - Independent tool for browsing the Ergo Blockchain</title>

		<!-- Favicon -->
		<link rel="icon" type="image/png" href="favicon.png">
		<link rel="apple-touch-icon" type="image/png" href="apple-touch-icon.png">

			<!-- Bootstrap 5 CSS -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-nightfall.min.css" rel="stylesheet" media="(prefers-color-scheme: dark)">

		<!-- Font Awesome CSS -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

		<!-- build:css styles/main.css -->
		<link rel="stylesheet" href="styles/main.css">
		<!-- endbuild -->
		
		{% block styles %}{% endblock %}

		<!-- SEO -->
		<meta name="description" content="Erg Explorer is an independent tool for browsing the Ergo blockchain.">
		<meta name="keywords" content="ergo, erg, blockchain, explorer, tool, browser, transaction, block, scan, wallet, search, address, explore">
		<meta name="author" content="Aco Å mrkas">

		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-84SMBQLNNF"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-84SMBQLNNF');
		</script>

	</head>

	<body class="bg-dark">

		{% block navigation %}{% endblock %}

		<!-- Page Content -->
		<div class="container p-0">
			<br>

			{% include "partials/search-form.njk" %}

			<div class="row w-100">
				<div class="col div-summary">
					<p>
					<strong>NOTE:</strong> Erg Explorer is still in its <strong>alpha</strong> development phase. Please report any issues you encounter in our <strong><a href="https://t.me/ErgExplorer" target="_new">Telegram group</a></strong>.
					</p>
					<p style="display: hidden;">Official Ergo Explorer link: <a target="_new" id="officialLink" href="https://explorer.ergoplatform.com">https://explorer.ergoplatform.com</a></p>
				</div>
			</div>

			<br>

			{% block content %}{% endblock %}
		</div>
	
		<!-- Footer -->
		{% include "partials/footer.njk" %}

		<!-- Bootstrap Toast -->
		<div class="toast-container position-fixed bottom-0 end-0 p-3">
			<div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
				<div id="toastBody" class="toast-body">
					Copied to clipboard!
				</div>
			</div>
		</div>

		<!-- JQuery JavaScript -->
		<script
			src="https://code.jquery.com/jquery-3.6.4.min.js"
			integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8="
			crossorigin="anonymous"></script>

		<!-- Bootstrap 5 JavaScript -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

		<!-- Custom JavaScript -->
		<script src="./scripts/common/token-icons.js?v=7"></script>
		<script src="./scripts/common/params.js?v=7"></script>
		<script src="./scripts/main.js?v=7"></script>
		{% block scripts %}{% endblock %}
	</body>
</html>