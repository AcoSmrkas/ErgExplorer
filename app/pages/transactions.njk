{% extends "layout.njk" %}

{% block styles %}
	<!-- build:css styles/transactions.css -->
	<link rel="stylesheet" href="styles/transactions.css">
	<!-- endbuild -->
{% endblock %}

{% block navigation %}
		{% import 'macros/nav-macro.njk' as nav %}
		{{nav.active('')}}
{% endblock %}

{% block content %}
	<h2 class="main-heading p-2">Transaction</h2>

	<div id="txDataHolder" style="display: none;" class="col-md-12">
		<div class="row w-100 div-cell">
			<div id="txHeader" class="col-9">
			</div>
			<div id="txTime" class="col-3 d-flex justify-content-end">
			</div>
		</div>

		<div class="row w-100">
			<div class="col-md-6 div-cell">
				<div class="row w-100">
					<div class="col-6">
						<p><strong>Size</strong></p>
						<p><strong>Received time</strong></p>
						<p><strong>Included in blocks</strong></p>
						<p><strong>Confirmations</strong></p>
					</div>
					<div class="col-6">
						<p id="txSize"></p>
						<p id="txReceivedTime"></p>
						<p id="txIncludedInBlocks"></p>
						<p id="txConfirmations"></p>
					</div>
				</div>
			</div>
			<div class="col-md-6 div-cell">
				<div class="row w-100">
					<div class="col-6">
						<p><strong>Total coins transferred</strong></p>
						<p><strong>Fees</strong></p>
						<p><strong>Fees per byte</strong></p>
					</div>
					<div class="col-6">
						<p id="txTotalCoinsTransferred"></p>
						<p id="txFees"></p>
						<p id="txFeesPerByte"></p>
					</div>
				</div>
			</div>
		</div>

		<br>

		<div class="row w-100">
			<div class="col-md-6 div-cell">
				<h2>Inputs</h2>
				<br>
				<div id="txInputs">
				</div>
			</div>
			<div class="col-md-6 div-cell">
				<h2>Outputs</h2>
				<br>			
				<div id="txOutputs">
				</div>
			</div>
		</div>

		<br>

		<div class="row w-100">
			<div class="col-12 div-cell">
				<h2>Raw inputs</h2>
				<br>
				<pre id="txRawInput"></pre>
			</div>
		</div>

		<br>

		<div class="row w-100">
			<div class="col-12 div-cell">
				<h2>Raw outputs</h2>
				<br>
				<pre id="txRawOutput"></pre>
			</div>
		</div>
	</div>

	{% include "partials/error-message.njk" %}

	{% include "partials/loading.njk" %}

	<br>
{% endblock %}

{% block scripts %}
		<script src="./scripts/transactions.js?v=4"></script>
{% endblock %}