{% extends "layout.njk" %}

{% block styles %}
	<!-- build:css styles/addresses.css -->
	<link rel="stylesheet" href="styles/addresses.css">
	<!-- endbuild -->
{% endblock %}

{% block navigation %}
	{% import 'macros/nav-macro.njk' as nav %}
	{{nav.active('')}}
{% endblock %}

{% block content %}
	<div class="col-md-12">
		<h2 class="main-heading p-2">Address</h2>
		
		<div id="summaryOk" style="display: none;" class="row w-100">
			<div class="col-md-7 col-sm-12 div-cell">
				<h4><strong>Summary</strong></h4>
				<p>
					<strong>Address:</strong> <a onclick="copyWalletAddress(event)" href="Copy to clipboard!" id="address"></a>
				</p>
				<p id="totalTransactions"></p>

				<br>

				<button id="showQRcodeBtn" type="button" class="btn btn-info">Show QR Code</button>
				
				<br>
				<br>
				
				<p>
					<strong>NOTE:</strong> Erg Explorer is still in <strong>alpha</strong> phase. Plase report any issues you encounter in our <strong><a href="https://t.me/ErgExplorer" target="_new">Telegram group</a></strong>.
				</p>
				<p>Official Ergo Explorer link: <a target="_new" id="officialLink" href="#">/</a></p>
			</div>
			<div class="col-md col-sm-12 div-cell">
				<h4><strong>Balance</strong></h4>
				<h5 id="finalBalance"></h5>
				<br>
				<div id="tokensHolder" style="display:none">
					<h4><strong>Tokens:</strong></h4>
					<p id="tokens"></p>
				</div>
			</div>
		  </div>

		  <div id="txView" class="row w-100">
		  	<br>

			<table class="table table-dark table-striped">
				<thead>
					<tr>
						<th scope="col">Tx</th>
						<th scope="col">Time</th>
						<th scope="col">Block</th>
						<th scope="col"></th>
						<th scope="col">From</th>
						<th scope="col">To</th>
						<th scope="col">Status</th>
						<th scope="col">Fee</th>
						<th scope="col">Value</th>
					</tr>
				</thead>

				<tbody id="transactionsTableBody">                                          
				</tbody>
			</table>

			<nav aria-label="Page navigation">
				<ul class="pagination justify-content-center">
					<li id="firstPageHolder" class="page-item">
						<a id="firstPage" class="page-link" href="#" aria-label="Previous">
							<span aria-hidden="true">&laquo;</span>
						</a>
					</li>
					<li id="previousPageHolder" class="page-item">
						<a id ="previousPage" class="page-link" href="#" aria-label="Previous">
							<span aria-hidden="true">&lsaquo;</span>
						</a>
					</li>
					<li class="page-item"><a id="pageNum" class="page-link">1 of 1</a></li>
					<li id="nextPageHolder" class="page-item">
						<a id="nextPage" class="page-link" href="#" aria-label="Next">
							<span aria-hidden="true">&rsaquo;</span>
						</a>
					</li>
					<li id="lastPageHolder" class="page-item">
						<a id="lastPage" class="page-link" href="#" aria-label="Next">
							<span aria-hidden="true">&raquo;</span>
						</a>
					</li>
				</ul>
			</nav>
		</div>

	  	<div id="summaryError" style="display: none;" class="col-md-12">
			<div class="row w-100">
				<div class="col-md-12 div-cell">
					<p>No results matching your query.</p>
					<br>
					<p><strong>NOTE:</strong> Erg Explorer is still in <strong>alpha</strong> phase. Plase report any issues you encounter in our <strong><a href="https://t.me/ErgExplorer" target="_new">Telegram group</a></strong>.</p>
				</div>
			</div>
		</div>

		<div id="txLoading"> 
			<div id="txLoadingInner">
				<img id="loadingImg" src="./images/logo.png">
			</div>
		</div>
	</div>

	<div id="qrCodeBack">
		<div id="qrCodeHolder">	
			<div id="qrcode"></div>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	<script src="./scripts/addresses.js?v=2"></script>
	<script src="./scripts/3rd-party/qrcode.min.js"></script>
{% endblock %}