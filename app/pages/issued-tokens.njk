{% extends "layout.njk" %}

{% block navigation %}
	{% import 'macros/nav-macro.njk' as nav %}
	{{nav.active('issued-tokens')}}
{% endblock %}

{% block content %}
	<div class="col-md-12">
		<div class="row w-100">
			<div class="col-md-12">
				<h2>Issued Tokens</h2>
			</div>
		</div>
	 
		<br>

		<div id="issuedTokensHolder" style="display: none;">
			<div class="row w-100">
				<table class="table table-dark table-striped">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Name</th>
							<th scope="col">Amount</th>
							<th scope="col">Decimals</th>
							<th scope="col">Description</th>
						</tr>
					</thead>
				 
					<tbody id="issuedTokensTableBody">              
					</tbody>
				</table>
			</div>

			{% include "partials/pagination.njk" %}
		</div>
	</div>

	<div id="loadError" style="display: none;" class="col-md-12">
		<div class="row w-100">
			<div class="col-md-12 div-cell">
				<p>Failed to fetch issued tokens.</p>
				<br>
				<p><strong>NOTE:</strong> Erg Explorer is still in <strong>alpha</strong> phase. Plase report any issues you encounter in our <strong><a href="https://t.me/ErgExplorer" target="_new">Telegram group</a></strong>.</p>
			</div>
		</div>
	</div>

	<div id="txLoading"> 
		<div id="txLoadingInner">
			<img id="loadingImg" src="./images/logo.png">
		</div>
	</div>
{% endblock %}

{% block scripts %}
	<script src="./scripts/common/pagination.js"></script>
	<script src="./scripts/issued-tokens.js"></script>
{% endblock %}