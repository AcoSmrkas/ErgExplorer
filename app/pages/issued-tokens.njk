{% extends "layout.njk" %}

{% block styles %}
	<!-- build:css styles/issued-tokens.css -->
	<link rel="stylesheet" href="styles/issued-tokens.css">
	<!-- endbuild -->
{% endblock %}

{% block navigation %}
	{% import 'macros/nav-macro.njk' as nav %}
	{{nav.active('issued-tokens')}}
{% endblock %}

{% block content %}
	<div class="col-md-12">
		<div class="row w-100">
			<div class="col-6">
				<h2>Issued Tokens</h2>
			</div>
			<div class="col-6 d-flex justify-content-end">
				<div id="nftSwitchHolder" class="form-check form-switch form-switch-lg">
					<input onclick="onNftSwitchClick(event)" id="nftSwitch" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
					<label class="form-check-label" for="flexSwitchCheckDefault">Hide NFTs</label>
				</div>
			</div>
		</div>
	 
		<br>

		<div id="issuedTokensHolder" style="display: none;">
			<div class="row w-100">
				<table class="table table-dark table-striped">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Name</th>
							<th scope="col">Amount</th>
							<th scope="col">Decimals</th>
							<th scope="col">Description</th>
						</tr>
					</thead>
				 
					<tbody id="issuedTokensTableBody">              
					</tbody>
				</table>
			</div>

			{% include "partials/pagination.njk" %}
		</div>
	</div>

	{% include "partials/error-message.njk" %}

	{% include "partials/loading.njk" %}
{% endblock %}

{% block scripts %}
	<script src="./scripts/common/pagination.js?v=5"></script>
	<script src="./scripts/issued-tokens.js?v=5"></script>
{% endblock %}