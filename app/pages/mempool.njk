{% extends "layout.njk" %}

{% block navigation %}
	{% import 'macros/nav-macro.njk' as nav %}
	{{nav.active('mempool')}}
{% endblock %}

{% block content %}
	<div class="col-md-12">
		<div class="row w-100">
			<div class="col-md-12">
				<h2>Mempool</h2>
			</div>
		</div>
	 
		<br>

		<div id="mempoolHolder" style="display: none;">
			<div class="row w-100">
				<table class="table table-dark table-striped">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Time</th>
							<th scope="col">Inputs</th>
							<th scope="col">Outputs</th>
							<th scope="col">Size</th>
						</tr>
					</thead>
				 
					<tbody id="transactionsTableBody">						
					</tbody>
				</table>
			</div>

			{% include "partials/pagination.njk" %}
		</div>
		
		{% include "partials/error-message.njk" %}
	</div>

	{% include "partials/loading.njk" %}
{% endblock %}

{% block scripts %}
	<script src="./scripts/common/pagination.js?v=20"></script>
	<script src="./scripts/mempool.js?v=20"></script>
{% endblock %}